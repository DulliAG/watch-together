<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="">
  <link rel="icon" href="../../favicon.ico">

  <title>Watch Together</title>

  <!-- Material Design CSS files -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.indigo-pink.min.css">

  <!-- Custom styles for this template -->
  <link href="css/main.css" rel="stylesheet">

  <!-- Font awesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>

  <div class="mdl-layout mdl-js-layout mdl-layout--fixed-drawer 
              mdl-layout--fixed-header">
    <header class="mdl-layout__header">
      <div class="mdl-layout__header-row">
        <div class="mdl-layout-spacer"></div>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--expandable
                    mdl-textfield--floating-label mdl-textfield--align-right">
          <label class="mdl-button mdl-js-button mdl-button--icon" for="search-input">
            <i id="search-input-btn" class="material-icons">search</i>
          </label>
          <div class="mdl-textfield__expandable-holder">
            <input class="mdl-textfield__input" type="text" placeholder="F0zOQhFQd9k" name="search-input" id="search-input">
          </div>
        </div>
      </div>
    </header>
    <div class="mdl-layout__drawer">
      <span class="mdl-layout-title">Watch Together</span>
      <nav class="mdl-navigation">
        <a class="mdl-navigation__link" href="">Home</a>
        <a class="mdl-navigation__link" href="">About</a>
      </nav>
    </div>
    <main class="mdl-layout__content md-grid">
      <div class="page-content mdl-cell mdl-cell--4-col mdl-cell--4-offset">
        <div id="player-ui">
          <div class="container h-100 d-flex justify-content-center">
            <div class="jumbotron my-auto">
              <h4 id="video-title">Title: </h4>

              <div id="player"></div>

              <div class="controls">
                <div class="mdl-grid">
                  <!-- Control buttons -->
                  <div class="mdl-cell mdl-cell--3-col">
                    <button id="play-btn" class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect">
                      <i class="material-icons">play_arrow</i>
                    </button>
                    <button id="pause-btn" class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect">
                      <i class="material-icons">pause</i>
                    </button>
                  </div>
                  <!-- Timeline -->
                  <div class="mdl-cell mdl-cell--9-col">
                    <div class="timeline">
                      <div class="line"></div>
                      <div class="dot"></div>
                    </div>
                  </div>
                </div>
              </div>
              <!-- /.controls -->
            </div>
          </div>
          <!-- /.container -->
        </div>
        <!-- /#player-ui -->
      </div>
      <!-- /.page-content -->
    </main>
  </div>

  <!-- Material core JavaScript
    ================================================== -->
  <!-- Placed at the end of the document so the pages load faster -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
  <script>window.jQuery || document.write('<script src="js/jquery.min.js"><\/script>')</script>
  <script defer src="https://code.getmdl.io/1.3.0/material.min.js"></script>
  <!-- Custom scripts -->
  <script src="js/socket.io.js"></script>
  <script src="js/client.io.js"></script>
  <script>
    // This function will check, if you clicked on search and then
    // it will parse the video link and reload the page with the correct
    // video.
    $('#search-input-btn').click(function (event) {
      const searchInput = $('#search-input').val();
      if (searchInput.length == 0) {
        return;
      }
      player.loadVideoById(searchInput);
    })
  </script>
</body>

</html>