<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../favicon.ico">

    <title>Watch Together</title>

    <!-- Material Design CSS files -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.indigo-pink.min.css">

    <!-- Custom styles for this template -->
    <link href="css/main.css" rel="stylesheet">

    <!-- Font awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
    <dialog id="username-dialog" class="mdl-dialog">
        <h3 class="mdl-dialog__title">Type in your username</h3>
        <div class="mdl-dialog__content">
            <form action="#">
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <input class="mdl-textfield__input" type="text" id="username-input">
                    <label class="mdl-textfield__label" for="username-input">Username...</label>
                </div>
            </form>
        </div>
        <div class="mdl-dialog__actions">
            <button type="button" class="mdl-button close">Get Started!</button>
        </div>
    </dialog>

    <div class="mdl-layout mdl-js-layout mdl-layout--fixed-drawer 
              mdl-layout--fixed-header">
        <header class="mdl-layout__header">
            <div class="mdl-layout__header-row">
                <div class="mdl-layout-spacer"></div>
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--expandable
                    mdl-textfield--floating-label mdl-textfield--align-right">
                    <label class="mdl-button mdl-js-button mdl-button--icon" for="search-input">
                        <i id="search-input-btn" class="material-icons">search</i>
                    </label>
                    <div class="mdl-textfield__expandable-holder">
                        <input class="mdl-textfield__input" type="text" placeholder="F0zOQhFQd9k" name="search-input" id="search-input">
                    </div>
                </div>
            </div>
        </header>
        <div class="mdl-layout__drawer">
            <span class="mdl-layout-title">Watch Together</span>
            <nav class="mdl-navigation">
                <a class="mdl-navigation__link" href="">Home</a>
                <a class="mdl-navigation__link" href="">About</a>
                <div class="divider"></div>
                <a class="mdl-navigation__link" href="">Impressum</a>
                <a class="mdl-navigation__link" href="">Datenschutz</a>
            </nav>
        </div>
        <main class="mdl-layout__content">
            <div class="page-content">
                <div class="mdl-grid">
                    <!-- Player UI cell -->
                    <div class="mdl-cell mdl-cell--4-col mdl-cell--2-offset">
                        <div id="player-ui">
                            <div class="container h-100 d-flex justify-content-center">
                                <div class="jumbotron my-auto">
                                    <div id="player"></div>

                                    <div class="controls">
                                        <div class="mdl-grid">
                                            <!-- Control buttons -->
                                            <div class="mdl-cell mdl-cell--3-col">
                                                <button id="play-btn" class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect">
                                                    <i class="material-icons">play_arrow</i>
                                                </button>
                                                <button id="pause-btn" class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect">
                                                    <i class="material-icons">pause</i>
                                                </button>
                                            </div>
                                            <!-- Timeline -->
                                            <div class="mdl-cell mdl-cell--9-col">
                                                <div class="timeline">
                                                    <div class="line"></div>
                                                    <div class="dot"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- /.controls -->
                                </div>
                            </div>
                            <!-- /.container -->
                        </div>
                    </div>

                    <!-- User and video info cell -->
                    <div class="mdl-cell mdl-cell--4-col mdl-cell--1-offset">
                        <div class="container h-100 d-flex justify-content-center">
                            <div class="jumbotron my-auto">
                                <% if (locals.room) { %>
                                    <h4>Room:
                                        <%= room %>
                                    </h4>
                                <% } %>
                                <h4>Video information</h4>
                                <!-- Video info -->
                                <ul id="video-info" class="demo-list-item mdl-list">
                                    <li class="mdl-list__item">
                                        <p>Video title:
                                            <span id="video-title"></span>
                                        </p>
                                    </li>
                                    <li class="mdl-list__item">
                                        <p>Video ID:
                                            <span id="video-id"></span>
                                        </p>
                                    </li>
                                </ul>
                                <!-- /Video info -->

                                <!-- User info -->
                                <h4>User information</h4>
                                <h5>Users watching:
                                    <span id="connected-count">0</span>
                                </h5>
                                <ul class="demo-list-two mdl-list" id="user-list">
                                </ul>
                                <!-- /User info -->
                            </div>
                        </div>
                    </div>
                    <!-- /User and video info cell -->
                </div>
                <!-- /.mdl-grid -->
            </div>
        </main>
    </div>

    <!-- Material core JavaScript
================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="js/jquery.min.js"><\/script>')</script>
    <script defer src="https://code.getmdl.io/1.3.0/material.min.js"></script>
    <!-- Custom scripts -->
    <script src="js/socket.io.js"></script>
    <script src="js/client.io.js"></script>
    <script>
        // This function will check, if you clicked on search and then
        // it will parse the video link and reload the page with the correct
        // video.
        $('#search-input-btn').click(function (event) {
            const searchInput = $('#search-input').val();
            if (searchInput.length == 0) {
                return;
            }
            player.loadVideoById(searchInput);

            setTimeout(() => {
                changeVideoInformation();
            }, 2000);
        });

        // Check if in searchbar enter key is pressed
        $('#search-input').keypress((e) => {
            if (e.which === 13) { // Pressed 'enter' key
                $('#search-input-btn').click();
            }
        });

        // Set a timeout before the dialog pops out, because the style needs
        // to be load.
        setTimeout(() => {
            var usernameDialog = document.querySelector('#username-dialog');
            usernameDialog.showModal();
            window.addEventListener('keydown', (e) => {
                if (e.key === 'Escape') {
                    e.preventDefault();
                }
            });

            usernameDialog.querySelector('.close').addEventListener('click', () => {
                usernameDialog.close();
            });
        }, 1000);
    </script>
</body>

</html>