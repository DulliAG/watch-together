    <div id="player-ui">
      <div class="container h-100 d-flex justify-content-center">
        <div class="jumbotron my-auto">
          <h4 id="video-title">Title: </h4>

          <div id="player"></div>
          
          <div class="controls">
            <div class="row">
              <!-- Control buttons -->
              <div class="col-2">
                <a id="play-btn" href="#" class="btn btn-dark">
                  <span class="fa fa-play"></span> 
                </a>
                <a id="pause-btn" href="#" class="btn btn-dark">
                  <span class="fa fa-pause"></span> 
                </a>
              </div>
              <!-- Timeline -->
              <div class="col-10">
                <div class="timeline">
                  <div class="line"></div>
                  <div class="dot"></div>
                </div>
              </div>
            </div>
